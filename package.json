{
  "name": "flashcard-new-tab",
  "version": "2.2.0",
  "description": "Repeat your knowledge with flashcard on each new tab",
  "scripts": {
    "dev": "node src/app/build/dev.js",
    "build": "node src/app/build/prod.js",
    "lint": "npm run typescript && npm run eslint && npm run prettier && npm run stylelint",
    "lint:fix": "npm run typescript && npm run eslint:fix && npm run prettier:fix && npm run stylelint:fix",
    "typescript": "tsc --noEmit",
    "eslint": "eslint --ext .ts,.js .",
    "eslint:fix": "eslint --fix --ext .ts,.js .",
    "prettier": "prettier --check **/*.{html,ts,js,spec.ts}",
    "prettier:fix": "prettier --write **/*.{html,ts,js,spec.ts}",
    "stylelint": "stylelint **.scss",
    "stylelint:fix": "stylelint --fix **.scss",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oleksiikhr/flashcard-new-tab.git"
  },
  "author": "Oleksii Khrushch <oleksiikhr@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oleksiikhr/flashcard-new-tab/issues"
  },
  "homepage": "https://github.com/oleksiikhr/flashcard-new-tab#readme",
  "dependencies": {
    "esbuild": "^0.14.54",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/chrome": "^0.0.190",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.64",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "esbuild-sass-plugin": "^2.3.3",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "ts-node": "^10.9.1"
  }
}
