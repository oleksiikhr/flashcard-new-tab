{
  "name": "flashcard-new-tab",
  "version": "2.0.0",
  "description": "Repeat your knowledge with flashcard on each new tab",
  "scripts": {
    "dev": "esbuild src/UI/Extension/bootstrap/app.ts --outdir=src/UI/Extension/public/dist --bundle --watch",
    "build": "esbuild src/UI/Extension/bootstrap/app.ts --outdir=src/UI/Extension/public/dist --bundle",
    "lint": "npm run eslint && npm run prettier && npm run stylelint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix && npm run stylelint:fix",
    "eslint": "eslint --ext .ts,.js .",
    "eslint:fix": "eslint --fix --ext .ts,.js .",
    "prettier": "prettier --check **/*.{html,ts,js,spec.ts}",
    "prettier:fix": "prettier --write **/*.{html,ts,js,spec.ts}",
    "stylelint": "stylelint **.scss",
    "stylelint:fix": "stylelint --fix **.scss",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oleksiikhr/flashcard-new-tab.git"
  },
  "author": "Oleksii Khrushch <oleksiikhr@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oleksiikhr/flashcard-new-tab/issues"
  },
  "homepage": "https://github.com/oleksiikhr/flashcard-new-tab#readme",
  "dependencies": {
    "esbuild": "^0.14.39",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-node": "^10.7.0"
  }
}
